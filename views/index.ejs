<%- include ('partials/header.ejs') %>

    <body>
        <div class="container">
            <br>
            <div class="pergunta-container">
                <h1>Perguntas recentes</h1>
            </div>
            <br>
            <% perguntas.forEach((pergunta)=> { %>
                <div class="card">
                    <div class="card-body">
                        <h4>
                            <%= pergunta.titulo%>
                        </h4>
                    </div>
                    <div class="card-footer">
                        <a href='/pergunta/<%= pergunta.id %>' class="btn btn-success">Responder</a>
                    </div>
                </div>
                <% }) %>
        </div>
    </body>

    <%- include ('partials/footer.ejs') %>